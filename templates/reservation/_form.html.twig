<div class="contact-wrapper">
    <form class="form-horizontal" method="post" action="{{ path('app_reservation_new') }}">
        <h1 class="section-header">Réservation</h1>

        <label for="lastname">Nom</label>
        <input type="text" id="lastname" placeholder="nom" name="lastname" required>

        <label for="firstname">Prénom</label>
        <input type="text" id="firstname" placeholder="Prénom" name="firstname" required>
        
        <label for="phoneNumber">Téléphone</label>
        <input type="tel" id="phoneNumber" placeholder="0600000000" name="phoneNumber">

        <label for="nbCouverts">Nombre de Personnes</label>
        <input type="number" id="nbCouverts" placeholder="" name="nbCouverts" required>
        
        <label for="date">Date</label>
        <input type="date" id="date" placeholder="" name="date" required>

        <label for="Service">Service</label>
        <select id="Service" name="Service">
            <option value="midi">Midi</option>
            <option value="soir">Soir</option>
        </select>

        <label for="midi">Heure</label>
        <select id="midi" name="midi">
            <option value="12:00">12:00</option>
            <option value="12:15">12:15</option>
            <option value="12:30">12:30</option>
            <option value="12:45">12:45</option>
            <option value="13:00">13:00</option>
            <option value="13:15">13:15</option>
            <option value="13:30">13:30</option>
        </select>

        <label for="soir">Heure</label>
        <select id="soir" name="soir">
            <option value="19:00">19:00</option>
            <option value="19:15">19:15</option>
            <option value="19:30">19:30</option>
            <option value="19:45">19:45</option>
            <option value="20:00">20:00</option>
            <option value="20:15">20:15</option>
            <option value="20:30">20:30</option>
        </select>

        {# <label for="message">Message</label>
        <textarea rows="10" id="message" name="message" required></textarea> #}

        

        <button class="send-button" id="submit" type="submit">Envoyer</button>
