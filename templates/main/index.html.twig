{% extends 'base.html.twig'%}

{% block title %}Homepage{% endblock %}

{% block body %}
 
    {% include "_partials/_mainBanner.html.twig" %}

 <main class="container"> 
    <section class="py-5">
      <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
        <div class="col-lg-6">
          <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
              {% for i in 1..galeries|length %}
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="{{ i - 1 }}" {{ (loop.first) ? 'class="active" aria-current="true"' : '' }} aria-label="Slide {{ i }}"></button>
              {% endfor %}
            </div>
            <div class="carousel-inner">
              {% for galerie in galeries %}
                <div class="carousel-item {{ (loop.first) ? 'active' : ''}}">
                  <img src="{{ asset('assets/uploads/images/plats/') ~ galerie.plat.image }}" class="d-block w-100" alt="{{ galerie.plat.title }}">
                </div>
              {% endfor %}
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>
        <div class="col-lg-6">
          <h1 class="display-5 fw-bold text-body-emphasis lh-1 mb-3">Venez goûter nos plats star !</h1>
          <p class="lead">Quickly design and customize responsive mobile-first sites with Bootstrap, the world’s most popular front-end open source toolkit, featuring Sass variables and mixins, responsive grid system, extensive prebuilt components, and powerful JavaScript plugins.</p>
          <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            <a href="{{ path('app_reservation_new') }}" class="btn btn-primary btn-lg px-4 me-md-2">Réserver</a>
          </div>
        </div>
      </div>
    </section>
  
</main>    
{% endblock %}
