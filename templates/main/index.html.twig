{% extends 'base.html.twig'%}

{% block title %}Homepage{% endblock %}

{% block body %}
  {# Ici on utilise la variable name #}
  {# <h1>Site restaurant</h1>
  <p>Bonjour {{ name }}, vous Ãªtes sur la page d'accueil.</p> #}

 <main class="container">
  <section class="row">
    <div class="col-12">
      <h1>Nos plats star !</h1>
    </div>
    <div class="col-6">
      <div id="carouselExampleIndicators" class="carousel slide">
        <div class="carousel-indicators">
          {% for i in 1..galeries|length %}
            <button type="button" data-bs-target="#carouselExampleIndicators" 
            data-bs-slide-to="{{ i - 1 }}" {{ (loop.first) ? 'class="active" aria-current="true"' : '' }} aria-label="Slide {{ i   }}"></button> 
          {% endfor %}
        </div>
        <div class="carousel-inner">
          {% for galerie in galeries %}
            <div class="carousel-item {{ (loop.first) ? 'active' : ''}}">
              <img src="{{ asset('uploads/images/') ~ galerie.image.filename }}" class="d-block w-100" alt="{{ galerie.image.title }}">
            </div>
          {% endfor %}
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>

    </div>
  </section> 
</main>     

{% endblock %}
