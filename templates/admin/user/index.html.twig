{% extends 'admin/index.html.twig' %}

{% block title %}User index{% endblock %}

{% block section %}
             
    <h1>Clients</h1>
    <div class="tableResponsive table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    {# <th>Id</th> #}
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                    <th>Couverts</th>
                    <th>Allergies</th>
                    {# <th>Roles</th> #}
                    <th>actions</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
            {% for user in users %}
                <tr>
                    {# <td>{{ user.id }}</td> #}
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.email }}</td>
                    {# <td>{{ user.roles ? user.roles|json_encode : '' }}</td> #}
                    <td>{{ user.phoneNumber }}</td>
                    <td>{{ user.nbCouverts }}</td>
                    <td>{{ user.allergie }}</td>
                    <td>
                        {# <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a> #}
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucun clients inscrit</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>    
{% endblock %}
