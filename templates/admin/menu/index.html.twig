{% extends 'base.html.twig' %}

{% block title %}Menu index{% endblock %}

{% block body %}
    <main class="container">
        <section class="row">
            {% include "_partials/_adminNav.html.twig" %}
            <div class="col-9 border border-light bg-white p-2">
                <h1>Menus</h1>

                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Titre</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for menu in menus %}
                        <tr>
                            <td>{{ menu.id }}</td>
                            <td>{{ menu.title }}</td>
                            <td>
                                {# <a href="{{ path('app_menu_show', {'id': menu.id}) }}">show</a> #}
                                <a href="{{ path('app_menu_edit', {'id': menu.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('app_menu_new') }}">Create new</a>
            </div>
        </section>
    </main>
{% endblock %}
