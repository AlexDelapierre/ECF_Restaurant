{% extends 'admin/index.html.twig' %}

{% block title %}Plat index{% endblock %}

{% block section %} 

    <div class="h1Admin">
        <h1>Carte</h1>
        <a href="{{ path('app_plat_new') }}" class="btn btn-success">Ajouter</a>
    </div>
    <div class="tableResponsive table-responsive">
        <table class="table table-sm table-hover">
            <thead class="thead-dark">
                <tr>
                    {# <th>Id</th> #}
                    <th>Catégorie</th>
                    <th>Plat</th>
                    <th>Description</th>
                    <th>Prix</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for plat in plats %}
                <tr>
                    {# <td>{{ plat.id }}</td> #}
                    <td>{{ plat.category.name }}</td>
                    <td>{{ plat.title | raw | nl2br }}</td>
                    <td>{{ plat.description | raw | nl2br }}</td>
                    <td>{{ plat.price ~ '€' }}</td>
                    <td>
                        {# <a href="{{ path('app_plat_show', {'id': plat.id}) }}">show</a> #}
                        <a href="{{ path('app_plat_edit', {'id': plat.id}) }}" class="btn btn-primary">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
