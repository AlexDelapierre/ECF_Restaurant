{% extends 'admin/adminTemplate.html.twig' %}

{% block title %}Plat{% endblock %}

{% block body %}
    <h1>Plat</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ plat.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ plat.title | raw | nl2br }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ plat.description | raw | nl2br }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ plat.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_plat_index') }}">back to list</a>

    <a href="{{ path('app_plat_edit', {'id': plat.id}) }}">edit</a>

    {{ include('admin/plat/_delete_form.html.twig') }}
{% endblock %}
