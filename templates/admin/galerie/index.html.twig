{% extends 'admin/adminTemplate.html.twig' %}

{% block title %}Galerie index{% endblock %}

{% block main %}

    <h1>Galerie</h1>

    <div class="tableResponsive table-responsive">    
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    {# <th>Id</th> #}
                    <th>Images</th>
                    <th>Plats</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% set i = 1 %}
                {% for galerie in galeries %}
                    <tr>
                        {# <td>{{ galerie.id }}</td> #}
                        <td>{{ "Image " ~ i }}</td>
                        {% set i = i + 1 %}
                        {% if galerie.plat is null %}
                        <td>Vide</td>
                        {% else %}                                  
                        <td>{{ galerie.plat.title }}</td>
                        {% endif %}
                        
                        <td>
                            {# <a href="{{ path('app_galerie_show', {'id': galerie.id}) }}">show</a> #}
                            <a href="{{ path('app_galerie_edit', {'id': galerie.id}) }}" class="btn btn-primary">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2">no records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
