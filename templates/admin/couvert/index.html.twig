{% extends 'admin/adminTemplate.html.twig' %}

{% block title %}Couvert index{% endblock %}

{% block main %}
       
    <h1>Couverts</h1>

    <div class="tableResponsive table-responsive">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>MaxCouverts</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody >
                {% for couvert in couverts %}
                    <tr>
                        <td>{{ couvert.maxCouverts }}</td>
                        <td>
                            {# <a href="{{ path('app_couvert_show', {'id': couvert.id}) }}">show</a> #}
                            <a href="{{ path('app_couvert_edit', {'id': couvert.id}) }}"
                            class="btn btn-primary">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
